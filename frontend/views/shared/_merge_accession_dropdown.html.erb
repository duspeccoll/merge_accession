<div id="merge-dropdown" class="btn-group dropdown" data-no-change-tracking="true">
	<a class="btn btn-sm btn-default dropdown-toggle merge-action" data-toggle="dropdown" href="#" title="<%= I18n.t("actions.merge") %>">
		<%= I18n.t("actions.merge") %> <span class="caret"></span>
	</a>
	<ul class="dropdown-menu merge-form open-aligned-right" style="padding: 10px;">
		<li>
			<p><%= I18n.t("plugins.merge_accession.merge_description") %></p>
			<%= form_context :merge, {} do |form| %>
				<fieldset>
					<div class="alert alert-danger missing-ref-message" style="display: none;">Please select the Resource to target</div>
					<%= render_aspace_partial :partial => "resources/linker", :locals => { :form => form, :hide_create => true, :layout => "stacked", :multiplicity => multiplicity } %>
				</fieldset>
				<div class="form-actions">
					<%=
						button_confirm_action(I18n.t("actions.merge"),
							url_for({:controller => "merge_accession",
							         :action => :merge,
											 :id => record.id
										 }),
							{
								:class => "btn btn-default pull-left merge-button",
								:"data-title" => confirmation_title,
								:"data-message" => confirmation_msg,
								:"data-confirm-btn-label" => "#{I18n.t("actions.merge")}",
								:"data-confirm-btn-class" => "btn btn-default"
							})
					%>
					<a class="btn btn-default btn-cancel pull-right" href="#"><%= I18n.t("actions.cancel") %></a>
				</div>
			<% end %>
		</li>
	</ul>
</div>
